<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <StatDef>
        <defName>EBSG_DeathrestEfficiency</defName>
        <label>deathrest efficiency</label>
        <description>Changes the rate that a pawn progresses through deathrest. The higher this value, the less time spent in deathrest.</description>
        <category>BasicsPawn</category>
        <defaultBaseValue>1</defaultBaseValue>
        <hideAtValue>1</hideAtValue>
        <minValue>0.001</minValue>
        <toStringStyle>PercentZero</toStringStyle>
        <displayPriorityInCategory>3401</displayPriorityInCategory>
    </StatDef>

    <StatDef>
        <defName>EBSG_PawnGestationSpeed</defName>
        <label>pregnancy speed</label>
        <description>Changes how fast a pawn's pregnancy progresses. The higher this value, the less time a pregnancy lasts. A pregnancy speed of 1 is normal speed, while a speed of 10 would cause the pregnancy to progress 10 times faster.</description>
        <category>BasicsPawn</category>
        <defaultBaseValue>1</defaultBaseValue>
        <hideAtValue>1</hideAtValue>
        <minValue>0.001</minValue>
        <toStringStyle>PercentZero</toStringStyle>
        <displayPriorityInCategory>3401</displayPriorityInCategory>
    </StatDef>

    <StatDef>
        <defName>EBSG_BloodlossRecoveryBonus</defName>
        <label>bloodloss recovery bonus</label>
        <description>Alters how quickly pawns recover from bloodloss. At 0%, the pawn recovers blood at the normal rate, while at 100% the pawn recovers from bloodloss twice as fast as normal.</description>
        <category>BasicsPawn</category>
        <defaultBaseValue>0</defaultBaseValue>
        <hideAtValue>0</hideAtValue>
        <minValue>-1</minValue>
        <toStringStyle>PercentZero</toStringStyle>
        <displayPriorityInCategory>2202</displayPriorityInCategory>
    </StatDef>

    <DamageDef>
        <defName>EBSG_GeneticDeformity</defName>
        <label>genetic deformity</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has been killed by bad genes.</deathMessage>
        <hediff>EBSG_GeneticDeformity</hediff>
        <harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>
        <hasForcefulImpact>false</hasForcefulImpact>
        <canInterruptJobs>false</canInterruptJobs>
        <impactSoundType />
        <armorCategory />
    </DamageDef>

    <HediffDef ParentName="InjuryBase">
        <defName>EBSG_GeneticDeformity</defName>
        <label>genetic deformity</label>
        <labelNoun>a genetic deformity</labelNoun>
        <description>A genetic deformity.</description>
        <defaultLabelColor>(0.7, 0.7, 0.7)</defaultLabelColor>
        <comps>
            <li Class="HediffCompProperties_TendDuration">
                <labelTendedWell>mended</labelTendedWell>
                <labelTendedWellInner>mended</labelTendedWellInner>
                <labelSolidTendedWell>mended</labelSolidTendedWell>
            </li>
        </comps>
        <injuryProps>
            <painPerSeverity>0</painPerSeverity>
            <averagePainPerSeverityPermanent>0</averagePainPerSeverityPermanent>
            <bleedRate>0.00</bleedRate>
            <canMerge>true</canMerge>
            <destroyedLabel>Genetically Damaged</destroyedLabel>
        </injuryProps>
    </HediffDef>

    <GeneDef Abstract="True" Name="EBSG_BloodRestoration">
        <displayCategory>Hemogen</displayCategory>
        <minAgeActive>3</minAgeActive>
        <exclusionTags><li>BloodRecovery</li></exclusionTags>
    </GeneDef>

    <GeneDef ParentName="EBSG_BloodRestoration"> <!--Go to site and find water recycling icon-->
        <defName>EBSG_SlightBloodRecoveryBonus</defName>
        <label>blood recovery</label>
        <description>Carriers of this gene replenish blood a little bit faster than normal. This will only take effect if the pawn is not actively bleeding.</description>
        <iconPath>UI/Icons/Genes/Gene_Deathrest</iconPath>
        <biostatMet>-1</biostatMet>
        <statOffsets>
            <EBSG_BloodlossRecoveryBonus>0.25</EBSG_BloodlossRecoveryBonus>
        </statOffsets>
        <modExtensions>
            <li Class="EBSGFramework.EBSGExtension">
                <fertilityAgeFactor>
                    <points>
                        <li>(14, 0)</li>
                        <li>(18, 2)</li>
                        <li>(50, 2)</li>
                    </points>
                </fertilityAgeFactor>
                <minFertilityByAgeFactor>
                    <points>
                        <li>(14, 0)</li>
                        <li>(18, 1)</li>
                        <li>(50, 1)</li>
                    </points>
                </minFertilityByAgeFactor>
            </li>
        </modExtensions>
    </GeneDef>
</Defs>
